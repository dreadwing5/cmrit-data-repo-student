<%- include ("../partials/header") %>


  <div class="container-fluid px-5 pt-2">

    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/student/book_publication"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Book Publications Data Entry</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-4 mb-3">
            <div class="form-group">
              <label class="required">RC-ID</label>
              <input type="text" name="rcid" class="form-control" required>
              <div class="invalid-feedback">
                Valid RC-ID is required.
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="form-group">
              <label class="required">Book name</label>
              <input type="text" name="bookName" class="form-control" required>
              <div class="invalid-feedback">
                Valid book name is required.
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="form-group">
              <label class="required">Publisher Name</label>
              <input type="text" name="publisherName" class="form-control" required>
              <div class="invalid-feedback">
                Valid publisher name is required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">ISBN No.</label>
              <input type="text" name="isbn" class="form-control" required>
              <div class="invalid-feedback">
                Valid ISBN no. is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Volume No./Issue/Edition</label>
              <input type="text" name="issue" class="form-control" required>
              <div class="invalid-feedback">
                Valid volume No. required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">

            <label class="required">Date of Publication</label>
            <input type="date" name="date" class="date__control form-control" required>
          </div>

          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">DOI</label>
              <input type="text" name="doi" class="form-control" required>
              <div class="invalid-feedback">
                Valid DOI required.
              </div>
            </div>
          </div>

          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label class="required">COE</label>

              <!-- COE -->
              <%- include ("../partials/coe") %>

                <div class="invalid-feedback">
                  Please provide a valid type.
                </div>
            </div>


            <!-- <div class="col-md-6 mb-3">

              <label class="required">Submission Date</label>
              <input type="date" class="form-control" name="filterDate" required>

              <div class="invalid-feedback">
                Please provide a valid details.
              </div>
            </div> -->


          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>




      </form>

    </section>

  </div>

  <!-- Footer -->

  <%- include ("../partials/footer") %>

    <script type="text/javascript" src="/js/date.js"></script>
    </body>

    </html>