<%- include ("../partials/header") %>


  <div class="container-fluid px-5 pt-2">

    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/student/awards" data-isinsertmode=<%=isInsertMode%>
        >


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Student Awards & Achievements Data Entry</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">USN</label>
              <input type="text" name="usn" class="form-control" required>
              <div class="invalid-feedback">
                Valid USN is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Event Name</label>
              <input type="text" name="eventName" class="form-control" required>
              <div class="invalid-feedback">
                Valid Event Name is required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Category</label>
              <select class="custom-select d-block w-100" name="category" id="selectBox" required>
                <option value="">Choose...</option>
                <option>Hackathon</option>
                <option>Competition</option>
                <option>Sports</option>
                <option>Cultural</option>
                <option>Games</option>
                <option>Others</option>
              </select>
              <input name="category" placeholder="Mention Here..." class="form-control other-text" type="text"
                style="display: none" id="textboxes">
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Level</label>
              <select name="level" class="custom-select d-block w-100" required>
                <option value="">Choose...</option>
                <option>Department</option>
                <option>College</option>
                <option>Inter-College</option>
                <option>University</option>
                <option>State</option>
                <option>National</option>
                <option>International</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">

            <label class="required">Date</label>
            <input type="date" name="date" class="date__control form-control" required>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label for="status">Status</label>
              <select name="status" class="custom-select d-block w-100">
                <option value="">Choose...</option>
                <option>1st Place</option>
                <option>2nd Place</option>
                <option>3rd Place</option>
                <option>Runner up</option>
                <option>Winner</option>
                <option>Participated</option>
                <option>Consolation</option>
              </select>
            </div>

          </div>

        </div>
        <div class="row data-row">
          <div class="col-md-4 mb-3">
            <div class="form-group">
              <label>Awarded By</label>
              <input type="text" class="form-control" name="awardedBy">
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="form-group">
              <label class="required">Department</label>
              <%- include ("../partials/departments") %>
                <div class="invalid-feedback">
                  Please provide a valid type.
                </div>
            </div>
          </div>



          <div class="col-md-4 mb-3">
            <div class="form-group">
              <label class="required">COE</label>

              <!-- COE -->
              <%- include ("../partials/coe") %>

                <div class="invalid-feedback">
                  Please provide a valid type.
                </div>
            </div>


            <!-- <div class="col-md-6 mb-3">

              <label class="required">Submission Date</label>
              <input type="date" class="form-control" name="filterDate" required>

              <div class="invalid-feedback">
                Please provide a valid details.
              </div>
            </div> -->


          </div>
        </div>

        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>


      </form>

    </section>

  </div>

  <!-- Footer -->

  <%- include ("../partials/footer") %>
    </body>

    </html>