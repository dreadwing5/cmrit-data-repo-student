<%- include ("../partials/header") %>


  <div class="container-fluid px-5 pt-2">

    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/students/journal_publications"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Journal and Conference Publications Data Entry</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Name of Journal/Conference</label>
              <input type="name" name="rcid" class="form-control" required>
              <div class="invalid-feedback">
                Valid name is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Publisher Name</label>
              <input type="text" name="pubName" class="form-control" required>
              <div class="invalid-feedback">
                Valid publisher name is required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">RC-ID</label>
              <input type="text" name="rcid" class="form-control" required>
              <div class="invalid-feedback">
                Valid RC-ID is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Paper Title</label>
              <input type="text" name="title" class="form-control" required>
              <div class="invalid-feedback">
                Valid book name is required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">ISBN No.</label>
              <input type="text" name="isbn" class="form-control" required>
              <div class="invalid-feedback">
                Valid ISBN no. is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Volume No./Issue/Edition</label>
              <input type="text" name="edition" class="form-control" required>
              <div class="invalid-feedback">
                Valid volume no. required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label class="required">ISSN No.</label>
            <input type="text" name="issn" class="form-control" required>
            <div class="invalid-feedback">
              Valid ISSN required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">DOI</label>
              <input type="text" name="doi" class="form-control" required>
              <div class="invalid-feedback">
                Valid DOI required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label>COE</label>

              <!-- COE -->
              <%- include ("../partials/coe") %>

            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Type of Journal/Conference</label>
            <select name="type" class="custom-select d-block w-100" required>
              <option value="">Choose...</option>
              <option>National Conference</option>
              <option>International Conference</option>
              <option>Journal</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid option
            </div>
          </div>
        </div>

        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label class="required">Indexed to</label>
            <div class="data-row">
              <input type="checkbox" name="index" value="Scopus"><label>Scopus</label><br>
              <input type="checkbox" name="index" value="SCI"><label>SCI</label><br>
              <input type="checkbox" name="index" value="Web of Science"><label>Web of Science</label><br>
              <input type="checkbox" id="others" name="index"><label>Others</label><input type="text" id="tOthers"
                style="display: none" placeholder="Mention Here..."><br>
            </div>
          </div>
        </div>

        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>




      </form>

    </section>

  </div>

  <!-- Footer -->

  <%- include ("../partials/footer") %>
    <script>
      var a = document.getElementById("others");
      a.addEventListener("click", function (e) {
        if (a.checked == true)
          document.getElementById("tOthers").style.display = "block";
        else
          document.getElementById("tOthers").style.display = "none";
      });
    </script>
    <script type="text/javascript" src="/js/date.js"></script>
    </body>

    </html>