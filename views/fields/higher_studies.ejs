<%- include ("../partials/header") %>

    <div class="container-fluid px-5 pt-2">
        <section id="form">
            <form id="myForm" class="needs-validation" novalidate action="/student/higher_studies"
                data-isinsertmode=<%=isInsertMode%>>

                <div class="row data-row">
                    <div class="col-md-8 mb-3">
                        <h4 class="mb-3 title">Higher Studies Data Entry</h4>
                    </div>
                    <div class="col-md-4 mb-3 report">
                        <a href="/search" class="btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label class="required">Name of Student</label>
                        <input type="text" name="name" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Graduation Year at CMRIT</label>
                        <input type="number" name="gradYear" min="1900" max="2021" class="form-control" required>
                    </div>
                    <div class="invalid-feedback">
                        Valid graduation year is required.
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label class="required">University Name</label>
                        <input type="text" name="universityName" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid university name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">University Address</label>
                        <input type="text" name="universityAddress" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid address is required.
                        </div>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label class="required">Year of Admission (PG)</label>
                        <input type="number" min="1900" max="2021" name="admissionYear" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid year of admission is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Course</label>
                        <input type="text" class="form-control" name="course" required>
                        <div class="invalid-feedback">
                            Valid course is required.
                        </div>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label class="required">Specialization</label>
                        <input type="text" class="form-control" name="specialization" required>
                        <div class="invalid-feedback">
                            Valid specialization is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Department</label>
                        <%- include ("../partials/departments") %>
                            <div class="invalid-feedback">
                                Valid department is required.
                            </div>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label>COE</label>
                        <!-- COE -->
                        <%- include ("../partials/coe") %>

                            <div class="invalid-feedback">
                                Please select a valid type.
                            </div>

                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Select an option</label>
                        <select name="location" class="custom-select d-block w-100" required>
                            <option value="">Choose...</option>
                            <option>Higher Studies in India</option>
                            <option>Higher Studies Abroad</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid option.
                        </div>
                    </div>
                </div>


                <div class="row data-row">
                    <div class="col-md-12 mb-3">
                        <%- include ("../partials/description") %>


                            <div class="submit-button">
                                <%if(isInsertMode){%>
                                    <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                                        Submit</button>
                                    <%} else{%>
                                        <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                                            Update</button>
                                        <span id='variableJSON' hidden>
                                            <%= JSON.stringify(data); %>
                                        </span>
                                        <%}%>
                            </div>
                    </div>
                </div>

            </form>
        </section>


    </div>

    <!-- Footer -->
    <%- include ("../partials/footer") %>


        <script type="text/javascript" src="/js/date.js"></script>


        </body>

        </html>