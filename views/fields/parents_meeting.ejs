<%- include ("../partials/header") %>


  <div class="container-fluid px-5 pt-2">

    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/students/parents_meeting"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Parents' Meeting Data Entry</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/student/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Name of the Parent</label>
              <input type="text" name="parentName" class="form-control" required>
              <div class="invalid-feedback">
                Valid parent name is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Date of the meeting</label>
            <input type="date" name="meetingDate" class="date__control form-control" required>
            <div class="invalid-feedback">
              Valid meeting date is required.
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Mobile Number</label>
              <input type="text" name="mobNumber" class="form-control" required>
              <div class="invalid-feedback">
                Valid mobile number is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Email</label>
            <input type="email" name="email" class="form-control" required>
            <div class="invalid-feedback">
              Valid email is required.
            </div>
          </div>
        </div>

        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Address</label>
              <input type="text" name="address" class="form-control" required>
              <div class="invalid-feedback">
                Valid address is required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Purpose of visit</label>
              <input type="text" name="purpose" class="form-control" required>
              <div class="invalid-feedback">
                Please provide a valid type.
              </div>
            </div>


            <!-- <div class="col-md-6 mb-3">

              <label class="required">Submission Date</label>
              <input type="date" class="form-control" name="filterDate" required>

              <div class="invalid-feedback">
                Please provide a valid details.
              </div>
            </div> -->


          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>




      </form>

    </section>

  </div>

  <!-- Footer -->

  <%- include ("../partials/footer") %>




    </body>

    </html>